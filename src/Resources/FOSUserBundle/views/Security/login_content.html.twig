{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container fosuser-div">

<form action="{{ path("fos_user_security_check") }}" method="post">
    <div class="row div-connect ">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="col">
        <label for="username">{{ 'security.login.username'|trans }}</label>
    </div>
    <div class="col">
         <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>
    </div>


    <div class="row div-connect ">
    <div class="col">
        <label for="password">{{ 'security.login.password'|trans }}</label>
    </div>
    <div class="col">
        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>
    </div>

    <div class="row div-connect ">
        <div class="col">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />

        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
    </div>

    <div class="row div-connect ">
    <div class="col-4 center">
       <input class="btn-connect btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</div>
    </div>
</form>
    </div>
</div>