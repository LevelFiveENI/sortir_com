{% extends 'pagetype.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block main %}
    <section class="container">
        <h1>Sortie</h1>

        <table class="table">
            <tbody>

                <tr>
                    <th>Nom</th>
                    <td>{{ sortie.nom }}</td>
                </tr>
                <tr>
                    <th>DateHeureDebut</th>
                    <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d') : '' }}</td>
                    <p class="card-text">Commence dans</p> <p id="countDown"></p>
                    <input id="dateSortie" type="hidden" value="{{ valeur.dateHeureDebut|date("M j, Y H:i:s") }}">
                </tr>
                <tr>
                    <th>Duree</th>
                    <td>{{ sortie.duree }}</td>
                </tr>
                <tr>
                    <th>DateLimiteInscription</th>
                    <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>NbInscriptionsMax</th>
                    <td>{{ sortie.nbInscriptionsMax }}</td>
                </tr>
                <tr>
                    <th>InfosSortie</th>
                    <td>{{ sortie.infosSortie }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('sortie_index') }}">back to list</a>

        <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">edit</a>

        <!-- A faire, liste des participants -->


        {{ encore_entry_script_tags('sortieDetailJS') }}
    </section>
{% endblock %}
